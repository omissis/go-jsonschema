{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "constraints": {
    "go": "1.24"
  },
  "packageRules": [
    {
      "description": "Update all dependencies up to the minor release level",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": ["golang"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    }
  ]
}
