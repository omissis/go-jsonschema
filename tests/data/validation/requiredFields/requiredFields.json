{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://example.com/requiredFields",
  "type": "object",
  "required": [
    "myString",
    "myNumber",
    "myBoolean",
    "myNull",
    "myObject",
    "myStringArray",
    "myNumberArray",
    "myBooleanArray",
    "myNullArray",
    "myObjectArray"
  ],
  "properties": {
    "myString": {
      "type": "string"
    },
    "myNumber": {
      "type": "number"
    },
    "myInteger": {
      "type": "integer"
    },
    "myBoolean": {
      "type": "boolean"
    },
    "myNull": {
      "type": "null"
    },
    "myObject": {
      "type": "object",
      "required": ["myNestedObjectString"],
      "properties": {
        "myNestedObjectString": {
          "type": "string"
        }
      }
    },

    "myStringArray": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "myNumberArray": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "myIntegerArray": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "myBooleanArray": {
      "type": "array",
      "items": {
        "type": "boolean"
      }
    },
    "myNullArray": {
      "type": "array",
      "items": {
        "type": "null"
      }
    },
    "myObjectArray": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["myNestedObjectString"],
        "properties": {
          "myNestedObjectString": {
            "type": "string"
          }
        }
      }
    }
  }
}
