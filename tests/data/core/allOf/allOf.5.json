{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "https://example.com/objectAllOf",
    "type": "object",
    "description": "Test case for allOf combining a $ref to an external schema definition with an inline schema object. Demonstrates mixed reference and inline schema merging with required field validation from both sources.",
    "$defs": {
        "foo5": {
            "type": "object",
            "properties": {
                "foo": {
                    "type": "string"
                }
            },
            "required": [
                "foo"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/foo5"
        },
        {
            "type": "object",
            "properties": {
                "bar": {
                    "type": "number"
                }
            },
            "required": [
                "bar"
            ]
        }
    ]
}